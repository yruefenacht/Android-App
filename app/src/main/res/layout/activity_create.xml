<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.bruefy.pointsofinterest.CreateActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:layout_width="fill_parent"
            android:layout_weight=".25"
            android:padding="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="ButtonClick"
            android:id="@+id/mapbutton"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:padding="30dp"
            android:text="2"
            android:onClick="ButtonClick"
            android:id="@+id/createbutton"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_menu_add"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:padding="30dp"
            android:text="3"
            android:id="@+id/listbutton"
            android:onClick="ButtonClick"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_menu_info_details"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:padding="30dp"
            android:text="4"
            android:id="@+id/favbutton"
            android:onClick="ButtonClick"
            android:background="@color/colorPrimary"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titel"
        android:id="@+id/t"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/titel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ort"
        android:id="@+id/o"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/t"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/ort"
        android:layout_alignTop="@+id/o"
        android:layout_centerHorizontal="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginn"
        android:id="@+id/b"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/ort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ende"
        android:id="@+id/e"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum auswählen"
        android:id="@+id/datebutton"
        android:layout_alignTop="@+id/b"
        android:layout_alignLeft="@+id/ort"
        android:layout_alignStart="@+id/ort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum auswählen"
        android:id="@+id/datebutton2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/datebutton"
        android:layout_alignStart="@+id/datebutton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
